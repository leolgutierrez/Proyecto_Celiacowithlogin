<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Celiaco.Login"
             BackgroundImageSource="backgroud.jpg"
             >
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"  Padding="20">

            <Label x:Name="txtgigante" Text="Ingrese su cuenta" Margin="0,120,0,0" FontFamily="3d" FontSize="50" HorizontalOptions="Center" TextColor="White"></Label>

            <Label Text="ingrese su usuario" TextColor="White"  FontSize="Large"   />
            <Entry Placeholder="usuariogenerico" PlaceholderColor="White" x:Name="txtboxusuario" TextColor="White" />

            <Label Text="ingrese su contraseña" TextColor="White" FontSize="Large" />
            <Entry Placeholder="example" PlaceholderColor="White" IsPassword="True" x:Name="txtboxcontraseña" TextColor="White"/>


            <Button Text="Ingresar" Margin="0,70,0,0" HorizontalOptions="Center" x:Name="botonlogear" Clicked="botonlogear_Clicked"  ></Button>

            <Label Text="No tienes cuenta?" TextColor="White" FontSize="Medium" ></Label>
            <Button Text="Registrate ahora" HorizontalOptions="Start" x:Name="btnregistro" Clicked="btnregistro_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>